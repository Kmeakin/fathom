use std::io;
use std::io::prelude::*;

pub struct Stl {
    header: Vec<u8>,
    num_triangles: i64,
    triangles: Vec<Triangle>,
}

impl Stl {
    fn read<R: Read>(reader: &mut R) -> io::Result<Stl> {
        let header = (0..80).map(|_| buf.read_u8()?).collect::<Result<_, _>>()?;
        let num_triangles = from_u32le((0..4).map(|_| buf.read_u8()?).collect::<Result<_, _>>()?)?;
        let triangles = (0..num_triangles).map(|_| Triangle::read(buf)?).collect::<Result<_, _>>()?;
        Ok(Stl {
            header: header,
            num_triangles: num_triangles,
            triangles: triangles,
        })
    }
}

pub struct Triangle {
    normal: Vec3d,
    vertices: Vec<Vec3d>,
}

impl Triangle {
    fn read<R: Read>(reader: &mut R) -> io::Result<Triangle> {
        let normal = Vec3d::read(buf)?;
        let vertices = (0..3).map(|_| Vec3d::read(buf)?).collect::<Result<_, _>>()?;
        Ok(Triangle {
            normal: normal,
            vertices: vertices,
        })
    }
}

pub struct Vec3d {
    x: i64,
    y: i64,
    z: i64,
}

impl Vec3d {
    fn read<R: Read>(reader: &mut R) -> io::Result<Vec3d> {
        let x = from_f32le((0..4).map(|_| buf.read_u8()?).collect::<Result<_, _>>()?)?;
        let y = from_f32le((0..4).map(|_| buf.read_u8()?).collect::<Result<_, _>>()?)?;
        let z = from_f32le((0..4).map(|_| buf.read_u8()?).collect::<Result<_, _>>()?)?;
        Ok(Vec3d {
            x: x,
            y: y,
            z: z,
        })
    }
}


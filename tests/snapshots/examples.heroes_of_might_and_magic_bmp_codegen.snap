use std::io;
use std::io::prelude::*;

pub struct HerosOfMightAndMagicBmp {
    magic: i64,
    width: i64,
    height: i64,
    data: Vec<u8>,
}

impl HerosOfMightAndMagicBmp {
    fn read<R: Read>(reader: &mut R) -> io::Result<HerosOfMightAndMagicBmp> {
        let data = (0..(width * height)).map(|_| buf.read_u8()?).collect::<Result<_, _>>()?;
        let height = {
            let x = (0..2).map(|_| buf.read_u8()?).collect::<Result<_, _>>()?;
            Ok(from_u16le(x))
        };
        let width = {
            let x = (0..2).map(|_| buf.read_u8()?).collect::<Result<_, _>>()?;
            Ok(from_u16le(x))
        };
        let magic = {
            let x = (0..2).map(|_| buf.read_u8()?).collect::<Result<_, _>>()?;
            Ok(from_u16le(x))
        };
        Ok(HerosOfMightAndMagicBmp {
            magic: magic,
            width: width,
            height: height,
            data: data,
        })
    }
}

